<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sibers</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css?@DateTime.Now.Ticks" />
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts",required: false)
</head>
<body>
    <header>
        <a id="logo" asp-controller="Home" asp-action="Index">
        </a>
        <nav>
            <ul class="navigation-list">
                <li>
                    <a class="white-oswald highlight" asp-controller="Projects" asp-action="Table">Проекты</a>
                </li>
                <li class="dropdown">
                    <a class="white-oswald highlight dropdown-text">Компании</a>
                    <ul class="dropdown-content">
                        <li>
                            <a class="white-oswald highlight" asp-controller="CustomerCompany" asp-action="Table">Компании заказчики</a>
                        </li>
                        <li>
                            <a class="white-oswald highlight" asp-controller="ExecutingCompany" asp-action="Table">Компании исполнители</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="white-oswald highlight" asp-controller="Employees" asp-action="Table">Сотрудники</a>
                </li>
                <li>
                    <a class="white-oswald highlight" asp-controller="Leaders" asp-action="Table">Руководители</a>
                </li>
                <li>
                    <a class="white-oswald highlight" asp-controller="Tasks" asp-action="Index">Задачи</a>
                </li>
            </ul>
        </nav>
        <a class="white-oswald blue-btn" asp-controller="Authorization" asp-action="SignIn">
            Вход
        </a>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <ul class="navigation-list">
            <li><a class="white-oswald highlight" target="_blank" href="http://www.sibers.ru">Официальный сайт</a></li>
            <li><a class="white-oswald highlight" href="#">Информация</a></li>
        </ul>
    </footer>

    @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sibers</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Sibers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>
