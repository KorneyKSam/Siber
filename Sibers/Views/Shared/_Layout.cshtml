<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sibers</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css?@DateTime.Now.Ticks" />
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <a id="logo" asp-controller="Home" asp-action="Index">
        </a>
        <nav>
            <ul class="navigation-list">
                <li class="dropdown">
                    <a class="white-oswald highlight dropdown-text">Компании</a>
                    <ul class="dropdown-content">
                        <li>
                            <a class="white-oswald highlight" asp-controller="CustomerCompany" asp-action="Table">Компании заказчики</a>
                        </li>
                        <li>
                            <a class="white-oswald highlight" asp-controller="ExecutingCompany" asp-action="Table">Компании исполнители</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="white-oswald highlight" asp-controller="Employees" asp-action="Table">Сотрудники</a>
                </li>
                <li>
                    <a class="white-oswald highlight" asp-controller="Projects" asp-action="Table">Проекты</a>
                </li>
                <li>
                    <a class="white-oswald highlight" asp-controller="Tasks" asp-action="Index">Задачи</a>
                </li>
            </ul>
        </nav>
        <a class="white-oswald blue-btn" asp-controller="Authorization" asp-action="SignIn">
            Вход
        </a>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <ul class="navigation-list">
            <li><a class="white-oswald highlight" target="_blank" href="http://www.sibers.ru">Официальный сайт</a></li>
            <li><a class="white-oswald highlight" href="#">Информация</a></li>
            <li><div class="red-oswald">@TempData["Message"]</div></li>
        </ul>      
    </footer>
</body>
</html>
