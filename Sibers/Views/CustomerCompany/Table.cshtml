@using Sibers.Models.CustomerCompany
@model List<CustomerCompanyViewModel>
@{
    ViewData["Title"] = "Компании заказчики";
}

<div>
    <h1 id="table-title">Компании заказчики</h1>
    <div class="tends-to-center" id="table-wrapper">
        <div id="table-scroll">
            <table class="table-content">
                <thead id="table-head">
                    <tr class="sticky white-oswald blue-background">
                        <th>Название Компании</th>
                        <th>Описание</th>
                        <th />
                        <th />
                    </tr>
                </thead>
                <tbody class="change-color-for-even">
                    @if (Model != null)
                    {
                        @foreach (var company in Model)
                        {
                            <tr>
                                <td class="table-text">@company.CompanyName</td>
                                <td class="table-text">@company.Description</td>
                                <td>
                                    <a class="table-change-row" asp-controller="CustomerCompany" asp-action="ChangeRow" asp-route-id="@company.Id">
                                        +
                                    </a>
                                </td>
                                <td>
                                    <a class="table-delete-row" asp-controller="CustomerCompany" asp-action="DeleteRow" asp-route-id="@company.Id">
                                        -
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="last-row">
                            <a class="table-text" asp-controller="CustomerCompany" asp-action="ChangeRow">Создать новую запись</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
