@using Sibers.Models.Employee
@model List<EmployeeViewModel>
@{
    ViewData["Title"] = "Сотрудники";
}

<div>
    <h1 id="table-title">Сотрудники</h1>
    <div class="tends-to-center" id="table-wrapper">
        <div id="table-scroll">
            <table class="table-content">
                <thead id="table-head">
                    <tr class="sticky white-oswald blue-background">
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Почта</th>
                        <th>Компания</th>
                        <th />
                        <th />
                    </tr>
                </thead>
                <tbody class="change-color-for-even">
                    @if (Model != null)
                    {
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td class="table-text">@employee.LastName</td>
                                <td class="table-text">@employee.FirstName</td>
                                <td class="table-text">@employee.MiddleName</td>
                                <td class="table-text">@employee.Email</td>
                                <td class="table-text">@employee.ExecutingCompany.CompanyName</td>
                                <td>
                                    <a class="change" 
                                       asp-controller="Employees" 
                                       asp-action="ChangeRow" 
                                       asp-route-id="@employee.Id">Изменить</a>
                                </td>
                                <td>
                                    <a class="delete" 
                                       asp-controller="Employees" 
                                       asp-action="DeleteRow" 
                                       asp-route-id="@employee.Id">Удалить</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="last-row">
                            <a class="table-text" asp-controller="Employees" asp-action="ChangeRow">Создать новую запись</a>
                        </td>
                        <td>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
